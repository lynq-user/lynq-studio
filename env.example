# ──────────────────────────────────────────────
# Lynq Studio — Environment Variables
# Kopyala: cp env.example .env
# ──────────────────────────────────────────────

# Server
PORT=3000
NODE_ENV=development

# ClickHouse (Analytics DB)
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_DB=lynq_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# PostgreSQL (App DB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=lynq_app
POSTGRES_USER=lynq
POSTGRES_PASSWORD=lynq_dev_password

# CORS — izin verilen origin'ler (virgülle ayır)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000

# Buffer — ClickHouse batch insert ayarları
BUFFER_FLUSH_INTERVAL_MS=5000
BUFFER_MAX_SIZE=1000

# GeoIP — MaxMind GeoLite2 DB dosya yolu
GEOIP_DB_PATH=./data/GeoLite2-City.mmdb
